{% macro render_filtered_args(args, exclude=[]) %}
  {% for k, vlist in args.items() if k not in exclude %}
    {% set values = vlist if vlist is iterable and vlist is not string else [vlist] %}
    {% for v in values %}
      <input type="hidden" name="{{ k }}" value="{{ v }}">
    {% endfor %}
  {% endfor %}
{% endmacro %}